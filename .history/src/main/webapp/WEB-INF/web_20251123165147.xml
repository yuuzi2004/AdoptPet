<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
         http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
  <display-name>Pet1.0 Maven Webapp</display-name>
  
  <!-- Servlet 3.1+ 支持注解配置，@WebServlet 注解会自动生效 -->
  <!-- 如果注解不生效，可以使用下面的显式配置 -->
  
  <!-- 宠物列表 Servlet -->
  <servlet>
    <servlet-name>PetListServlet</servlet-name>
    <servlet-class>com.pet.adopt.controller.PetListServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>PetListServlet</servlet-name>
    <url-pattern>/pet/list</url-pattern>
  </servlet-mapping>
  
  <!-- 新增宠物 Servlet -->
  <servlet>
    <servlet-name>PetAddServlet</servlet-name>
    <servlet-class>com.pet.adopt.controller.PetAddServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>PetAddServlet</servlet-name>
    <url-pattern>/pet/add</url-pattern>
  </servlet-mapping>
</web-app>
